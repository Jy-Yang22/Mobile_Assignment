<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/upperPage"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:background="@drawable/about_us_pic"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/about_us_text"
            android:layout_width="206dp"
            android:layout_height="71dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="205dp"
            android:layout_marginRight="205dp"
            android:layout_marginBottom="0dp"
            android:text="@string/about_us"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:gravity="center_horizontal">
        </TextView>

    </RelativeLayout>

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="95dp"
        android:layout_height="73dp"
        android:layout_below="@id/upperPage"
        android:src="@drawable/facebooklogo">
    </ImageView>

    <TextView
        android:layout_width="316dp"
        android:layout_height="73dp"
        android:layout_below="@id/upperPage"
        android:layout_toEndOf="@id/facebook"
        android:layout_toRightOf="@id/facebook"
        android:text="Hello">
    </TextView>

    <ImageView
        android:id="@+id/email"
        android:layout_width="95dp"
        android:layout_height="73dp"
        android:layout_below="@id/facebook"
        android:src="@drawable/emaillogo">
    </ImageView>

    <TextView
        android:layout_width="316dp"
        android:layout_height="73dp"
        android:layout_below="@id/facebook"
        android:layout_toEndOf="@id/email"
        android:layout_toRightOf="@id/email"
        android:text="Hello">
    </TextView>

    <ImageView
        android:id="@+id/phone"
        android:layout_width="95dp"
        android:layout_height="73dp"
        android:layout_below="@id/email"
        android:src="@drawable/phonelogo">
    </ImageView>

    <TextView
        android:layout_width="316dp"
        android:layout_height="73dp"
        android:layout_below="@id/email"
        android:layout_toEndOf="@id/phone"
        android:layout_toRightOf="@id/phone"
        android:text="Hello">
    </TextView>

</RelativeLayout>