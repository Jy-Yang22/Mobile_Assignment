<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/upperPage"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:background="@drawable/about_us_pic"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/about_us_text"
            android:layout_width="206dp"
            android:layout_height="71dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="205dp"
            android:layout_marginRight="205dp"
            android:layout_marginBottom="0dp"
            android:text="@string/about_us"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:gravity="center_horizontal">
        </TextView>

        <ImageButton
            android:id="@+id/backAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/abc_vector_test" />

    </RelativeLayout>

    <Space
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/phone" />

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="95dp"
        android:layout_height="73dp"
        android:layout_below="@id/upperPage"
        android:src="@drawable/facebooklogo">
    </ImageView>

    <TextView
        android:layout_width="316dp"
        android:layout_height="73dp"
        android:layout_below="@id/upperPage"
        android:layout_toEndOf="@id/facebook"
        android:layout_toRightOf="@id/facebook"
        android:text="@string/facebook_link"
        android:textSize="25sp">
    </TextView>

    <ImageView
        android:id="@+id/email"
        android:layout_width="95dp"
        android:layout_height="73dp"
        android:layout_below="@id/facebook"
        android:src="@drawable/emaillogo">
    </ImageView>

    <TextView
        android:layout_width="316dp"
        android:layout_height="73dp"
        android:layout_below="@id/facebook"
        android:layout_toEndOf="@id/email"
        android:layout_toRightOf="@id/email"
        android:text="@string/email_link"
        android:textSize="25sp">
    </TextView>

    <ImageView
        android:id="@+id/phone"
        android:layout_width="95dp"
        android:layout_height="73dp"
        android:layout_below="@id/email"
        android:src="@drawable/phonelogo">
    </ImageView>

    <TextView
        android:id="@+id/phone_no_text"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:layout_below="@id/email"
        android:layout_toEndOf="@id/phone"
        android:layout_toRightOf="@id/phone"
        android:text="@string/phonoNo_link"
        android:textSize="25sp">
    </TextView>

    <TextView
        android:layout_width="318dp"
        android:layout_height="32dp"
        android:layout_below="@id/phone_no_text"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/phone"
        android:layout_toRightOf="@+id/phone"
        android:text="@string/feedback_text">
    </TextView>

    <Space
        android:id="@+id/spacer1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/phone" />

    <TextView
        android:id="@+id/aboutUs_text"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_below="@id/spacer"
        android:text="@string/about_us_desc"
        android:textSize="15sp"
        android:gravity="center"/>


</RelativeLayout>